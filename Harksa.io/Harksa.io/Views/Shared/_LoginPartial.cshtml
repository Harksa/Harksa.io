<ul class="navbar-nav ml-auto">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <p class="navbar-text" style="margin-bottom: 0">Hello, @User.Identity.Name</p>
        </li>

        <li class="nav-item">
            <a class="nav-link" onclick="document.getElementById('logout_form').submit();" style="cursor: pointer;">Log out</a>
            <form asp-controller="Account" asp-action="Logout" method="post" id="logout_form"></form>
        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Connexion</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Inscription</a>
        </li>

    }
</ul>